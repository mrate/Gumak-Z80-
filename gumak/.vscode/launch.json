    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run 128K",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}\\main.go"
        },
        {
            "name": "Run 48K",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}\\main.go",
            "args": [
                "-machine=48"
            ]
        },
        {
            "name": "Run 128K [+trace]",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "buildFlags": "-tags trace",
            "program": "${workspaceFolder}\\main.go"
        },
        {
            "name": "Run 48K [+trace]",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "buildFlags": "-tags trace",
            "program": "${workspaceFolder}\\main.go",
            "args": [
                "-machine=48"
            ]
        },
    ]
}